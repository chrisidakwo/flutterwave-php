{
    "name": "chrisidakwo/flutterwave-php",
    "description": "A PHP client library for Flutterwave payment processing system",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ekojoka Christolight Idakwo",
            "email": "chris.idakwo@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "5.*|6.*|7.*",
        "vlucas/phpdotenv": "^2.2|^3.6|^4.0",
        "respect/validation": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "mockery/mockery": "^0.9.4",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "ChrisIdakwo\\Flutterwave\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChrisIdakwo\\Flutterwave\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "fix": "vendor/bin/php-cs-fixer fix"
    }
}
